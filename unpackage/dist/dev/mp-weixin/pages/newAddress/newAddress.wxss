
.content {
		width: 100%;
		height: auto;
}
.infoitem {
		width: 100%;
		height: 68rpx;
		display: flex;
		flex-direction: row;
		margin: 10rpx 0;
		align-items: center;
}
.infoitem text {
		background-color: #EBEEF5;
		border-radius: 5px;
		height: 100%;
		line-height: 68rpx;
		padding: 0 5rpx;
}
#username,
	#tel,
	#addr{
		padding: 10rpx 15rpx;
		border: 1rpx solid #EBEEF5;
		border-radius: 5px;
}
.submitadd {
		width: 60%;
		margin: 0 auto;
		background-color: #FFB6C1;
		margin-top: 50rpx;
}
.submitadds {
		background-color: #FF7100;
}

