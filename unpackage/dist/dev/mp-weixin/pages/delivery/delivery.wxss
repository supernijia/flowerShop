
page {
		background-color: #e5e5e5;
}
.content {
		width: 100%;
		height: auto;
}
.shopItem {
		width: 95%;
		margin: 0 auto;
		border-radius: 20rpx;
		background-color: #fff;
		margin-bottom: 20rpx;
		margin-top: 20rpx;
}
.orderstate {
		font-size: 24rpx;
		padding: 20rpx;
}
.orderstate .ordertips {
		font-size: 28rpx !important;
		font-weight: 800;
}
.ordershop {
		width: 100%;
		padding: 20rpx;
		display: flex;
		flex-direction: row;
		align-items: center;
}
.ordershop .item-img {
		width: 160rpx;
		height: 160rpx;
}
.ordershop .item-img image {
		width: 100%;
		height: 100%;
		display: block;
		border-radius: 20rpx;
}
.orderinfo {
		padding: 20rpx;
		font-size: 24rpx;
}
