
.content {
		width: 100%;
		height: auto;
}
.tejias {
		margin-top: 30rpx;
}
.tejias-items {
		width: 100%;
		height: 240rpx;
		display: flex;
		background-color: #fafafa;
		border-bottom: 1px solid rgb(236, 236, 236);
}
.tejias-img {
		width: 200rpx;
		height: 200rpx;
		box-sizing: border-box;
		padding: 20px 15px;
}
.tejias-img image {
		width: 160rpx;
		height: 160rpx;
}
.tejias-text {
		display: flex;
		flex-direction: column;
		margin-left: 10rpx;
		margin-top: 36rpx;
}
.tejias-times {
		margin-left: 100rpx;
		margin-top: 60rpx;
		font-size: 26rpx;
}
.tejia-timees {
		background-color: #f31e4a;
		color: white;
		border-radius: 5rpx;
		box-sizing: border-box;
		padding: 1px 5px;
}
.tejias-text>text:nth-child(1) {
		font-size: 28rpx;
}
.tejias-text>text:nth-child(2) {
		color: #f60;
		margin-top: 10rpx;
		font-size: 35rpx;
}
.tejias-text>text:nth-child(3) {
		color: rgb(179, 179, 179);
		font-size: 25rpx;
		margin-top: 30rpx;
		text-decoration: line-through;
}
.progressa {
		margin-top: 20rpx;
}
